.offset-start.col-xs-12.col-sm-12.col-md-12.col-lg-12.well
	=render "shared/flash"
	.pull-left
		%h4 User
	.pull-right
		=form_tag(user_url(@user.id), :method => "delete") do 
			%a.btn.btn-primary{ :href => edit_user_url(@user.id) }
				%i.unicon-new-message
				Edit
			%button.btn.btn-danger{ :type => "submit" }
				%i.unicon-trash
				Delete
	.clearfix
	.offset-start
	.form-group
		%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 First Name
		%label= @user.first_name
	.form-group
		%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Last Name
		%label= @user.last_name
	.form-group
		%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Username
		%label= @user.username
	.form-group
		%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Email
		%label= @user.email
	.form-group
		%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Yearly PTO Hour Allotment
		%label= @user.yearly_pto_hour_allotment
	.form-group
		%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Department
		%label= @user.department ? @user.department.name : ""
	.form-group
		%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Role
		%label= @user.role ? @user.role.name : ""