.offset-start.col-xs-12.col-sm-12.col-md-12.col-lg-12.well
	=render "shared/flash"
	=form_tag(users_url, method: "post", class: "form-horizontal") do
		.pull-left
			%h6 Create User
		.pull-right
			%button.btn.btn-primary Save
		.clearfix
		.offset-start
		.form-group
			%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 First Name
			.col-xs-9.col-sm-9.col-md-9.col-lg-9
				%input.form-control{ :type => "text", :name => "first_name", :placeholder => "First Name" }
		.form-group
			%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Last Name
			.col-xs-9.col-sm-9.col-md-9.col-lg-9
				%input.form-control{ :type => "text", :name => "last_name", :placeholder => "Last Name" }
		.form-group
			%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Username
			.col-xs-9.col-sm-9.col-md-9.col-lg-9
				%input.form-control{ :type => "text", :name => "username", :placeholder => "Username" }
		.form-group
			%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Email
			.col-xs-9.col-sm-9.col-md-9.col-lg-9
				%input.form-control{ :type => "text", :name => "email", :placeholder => "Email" }
		.form-group
			%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Yearly PTO Hour Allotment
			.col-xs-9.col-sm-9.col-md-9.col-lg-9
				%input.form-control{ :type => "text", :name => "yearly_pto_hour_allotment", :placeholder => "PTO Hour Allotment" }
		.form-group
			%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Department
			.col-xs-9.col-sm-9.col-md-9.col-lg-9
				=select_tag "department", options_for_select(@departments.collect { |t| [t.name, t.id] }), :include_blank => true, :style => "width: 100%;"
		.form-group
			%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Role
			.col-xs-9.col-sm-9.col-md-9.col-lg-9
				=select_tag "role", options_for_select(@roles.collect { |t| [t.name, t.id] }), :include_blank => true, :style => "width: 100%;"