.offset-start.col-xs-12.col-sm-12.col-md-12.col-lg-12.well
	=render "shared/flash"
	=form_tag(users_url, method: "post", class: "form-horizontal") do
		.pull-left
			%h6 Create User
		.pull-right
			%button.btn.btn-primary Save
		.clearfix
		.offset-start
		.form-group
			%label.col-xs-2.col-sm-2.col-md-2.col-lg-2 Username
			.col-xs-10.col-sm-10.col-md-10.col-lg-10
				%input.form-control{ :type => "text", :name => "username", :placeholder => "Username" }
		.form-group
			%label.col-xs-2.col-sm-2.col-md-2.col-lg-2 Email
			.col-xs-10.col-sm-10.col-md-10.col-lg-10
				%input.form-control{ :type => "text", :name => "email", :placeholder => "Email" }
		.form-group
			%label.col-xs-2.col-sm-2.col-md-2.col-lg-2 Department
			.col-xs-10.col-sm-10.col-md-10.col-lg-10
				=select_tag "department", options_for_select(@departments.collect { |t| [t.name, t.id] }), :include_blank => true, :style => "width: 100%;"
		.form-group
			%label.col-xs-2.col-sm-2.col-md-2.col-lg-2 Role
			.col-xs-10.col-sm-10.col-md-10.col-lg-10
				=select_tag "role", options_for_select(@roles.collect { |t| [t.name, t.id] }), :include_blank => true, :style => "width: 100%;"