.offset-start.col-xs-12.col-sm-12.col-md-12.col-lg-12.well
	=render "shared/flash"
	.pull-left
		%h4 Time Request Type
	.pull-right
		=form_tag(time_request_type_url(@time_request_type.id), :method => "delete") do 
			%a.btn.btn-primary{ :href => edit_time_request_type_url(@time_request_type.id) }
				%i.unicon-new-message
				Edit
			%button.btn.btn-danger{ :type => "submit" }
				%i.unicon-trash
				Delete
	.clearfix
	.offset-start
	.form-group
		%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Time Request Type Name
		%label= @time_request_type.name
