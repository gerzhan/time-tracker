.offset-start.col-xs-12.col-sm-12.col-md-12.col-lg-12.well
	=render "shared/flash"
	=form_tag(time_request_type_url(@time_request_type.id), method: "put", class: "form-horizontal") do
		.pull-left
			%h6 Edit Time Request Type
		.pull-right
			%button.btn.btn-primary Save
		.clearfix
		.offset-start
		.form-group
			%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Name
			.col-xs-9.col-sm-9.col-md-9.col-lg-9
				%input.form-control{ :type => "text", :name => "name", :placeholder => "Task Type Name", :value => @time_request_type.name }
