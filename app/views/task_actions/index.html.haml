.offset-start.col-xs-12.col-sm-12.col-md-12.col-lg-12.well
	=render "shared/flash"
	.pull-right
		%a.btn.btn-primary{ :href => new_task_action_url }
			%i.fui-plus
			Create New Task Action
	.clearfix
	.offset-start
	%table.table.table-striped
		%thead
			%th Task Action Name
		- for action in @task_actions
			%tr
				%td 
					%a{ :href => task_action_url(action.id) } 
						=action.name