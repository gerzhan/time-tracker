.offset-start.col-xs-12.col-sm-12.col-md-12.col-lg-12.well
	=render "shared/flash"
	.pull-left
		%h4 Task Customer
	.pull-right
		=form_tag(task_customer_url(@task_customer.id), :method => "delete") do 
			%a.btn.btn-primary{ :href => edit_task_customer_url(@task_customer.id) }
				%i.unicon-new-message
				Edit
			%button.btn.btn-danger{ :type => "submit" }
				%i.unicon-trash
				Delete
	.clearfix
	.offset-start
	.form-group
		%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Task Customer Name
		%label= @task_customer.name