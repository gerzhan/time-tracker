.offset-start.col-xs-12.col-sm-12.col-md-12.col-lg-12.well
	=render "shared/flash"
	=form_tag(task_customer_url(@task_customer.id), method: "put", class: "form-horizontal") do
		.pull-left
			%h6 Edit Task Customer
		.pull-right
			%button.btn.btn-primary Save
		.clearfix
		.offset-start
		.form-group
			%label.col-xs-3.col-sm-3.col-md-3.col-lg-3 Task Customer Name
			.col-xs-9.col-sm-9.col-md-9.col-lg-9
				%input.form-control{ :type => "text", :name => "name", :placeholder => "Task Customer Name", :value => @task_customer.name }
