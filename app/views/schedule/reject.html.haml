.offset-start.col-xs-12.col-sm-12.col-md-12.col-lg-12.well
	=render "shared/flash"
	=form_tag(root_url + "/reject/" + @time_request_approval.id.to_s,method: "post", class: "form-horizontal") do
		.pull-left
			%h6 Reject Schedule Request
		.pull-right
			%button.btn.btn-primary Save
		.clearfix
		.offset_start
		.form-group
			%label.col-xs-2.col-sm-2.col-md-2.col-lg-2 Reason
			.col-xs-10.col-sm-10.col-md-10.col-lg-10
				%input.form-control{ :type => "text", :name => "reason", :placeholder => "Reason for Rejection" }