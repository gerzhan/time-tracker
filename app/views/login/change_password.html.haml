.offset-start.col-xs-12.col-sm-12.col-md-offset-4.col-md-4.col-lg-offset-4.col-lg-4.well
	=render "shared/flash"
	=form_tag(change_password_url, method: "post") do 
		.hidden
			.form-group
				.input-group
					.input-group-addon
						.unicon-user-male
					%input.form-control{ :type => "text", :name => "username", :value => @user.username }	
		.form-group
			.input-group
				.input-group-addon
					.unicon-lock
				%input.form-control{ :type => "password", :name => "password", :placeholder => "Password" }
		.form-group
			.input-group
				.input-group-addon
					.unicon-lock
				%input.form-control{ :type => "password", :name => "confirm_password", :placeholder => "Confirm Password" }
		.form-group
			.pull-right
				%button.btn Change Password
			.clearfix